<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="https://github.com/zcweng/SwitchButton"
        android:textColor="#999999"
        android:textSize="12sp" />

    <com.suke.widget.SwitchButton
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_margin="12dp"
        app:sb_show_indicator="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="https://github.com/kyleduo/SwitchButton"
        android:textColor="#999999"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_margin="12dp"
            app:kswThumbColor="#ff0000" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_custom_miui"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:kswBackDrawable="@drawable/miui_back_drawable"
            app:kswThumbDrawable="@drawable/miui_thumb_drawable"
            app:kswThumbHeight="25dp"
            app:kswThumbRangeRatio="2"
            app:kswThumbWidth="25dp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="系统"
        android:textColor="#999999"
        android:textSize="12sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:thumbTint="#ff0000"
        app:trackTint="#333333"
        app:thumbTintMode="src_over" />

</LinearLayout>