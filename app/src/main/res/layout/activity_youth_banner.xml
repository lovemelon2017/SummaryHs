<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner_v"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="指示器样式"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/tab_sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:entries="@array/TabStyle"
            android:gravity="center" />


        <CheckBox
            android:id="@+id/cb_yj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="圆角"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="轮播样式"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/banner_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:entries="@array/BannerStyle"
            android:gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="轮播切换"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/page_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:entries="@array/PageStyle"
            android:gravity="center" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="自定义指示器"
        android:textSize="15sp" />

    <!--    垂直案例-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="垂直案例"
        android:textColor="#FF0000"
        android:textSize="13sp" />

    <com.youth.banner.Banner
        android:id="@+id/banner2_v"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="12dp" />


</LinearLayout>