<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_tv1"
            style="@style/myTextStyle"
            android:text="显示Confirm弹框" />

        <TextView
            android:id="@+id/dialog_tv2"
            style="@style/myTextStyle"
            android:text="内置弹框绑定自己布局" />

        <TextView
            android:id="@+id/dialog_tv3"
            style="@style/myTextStyle"
            android:text="带有输入框的弹框" />

        <TextView
            android:id="@+id/dialog_tv4"
            style="@style/myTextStyle"
            android:text="列表样式可以带选择状态" />

        <TextView
            android:id="@+id/dialog_tv5"
            style="@style/myTextStyle"
            android:text="Loading" />

        <TextView
            android:id="@+id/dialog_tv6"
            style="@style/myTextStyle"
            android:text="点我看看" />

        <TextView
            android:id="@+id/dialog_tv7"
            style="@style/myTextStyle"
            android:text="QQ消息" />

        <TextView
            android:layout_margin="12dp"
            android:text="更多效果看GitHub"
            android:textSize="12sp"
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>