<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:text="广告位"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_advert_iv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:background="#EA9518"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_advert_iv2"
        app:layout_constraintTop_toBottomOf="@+id/item_title_tv" />

    <ImageView
        android:id="@+id/item_advert_iv2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="6dp"
        android:background="#999999"
        app:layout_constraintBottom_toTopOf="@+id/item_advert_iv3"
        app:layout_constraintLeft_toRightOf="@+id/item_advert_iv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_advert_iv1" />

    <ImageView
        android:id="@+id/item_advert_iv3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4090F5"
        app:layout_constraintBottom_toBottomOf="@+id/item_advert_iv1"
        app:layout_constraintLeft_toLeftOf="@+id/item_advert_iv2"
        app:layout_constraintRight_toRightOf="@+id/item_advert_iv2"
        app:layout_constraintTop_toBottomOf="@+id/item_advert_iv2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="12dp"
        android:background="#EEEEEE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_advert_iv1" />

</androidx.constraintlayout.widget.ConstraintLayout>